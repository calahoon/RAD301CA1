@model IEnumerable<S00122876CA1.OrderDetail>
@{
    ViewBag.Title = "Home Page";
}

<form method="GET">
    <div class="row" role="form">
        <div class="form-group col-md-2">
            <label for="searchTerm">Search For</label>
            <input type="text" name="searchTerm" class="form-control"/>
        </div>
        <div class="form-group col-md-2">
            <label>&nbsp;</label>
            <input type="submit" value="Search by Name" 
                   class="btn btn-primary form-control"/>
        </div>
    </div>
</form>

<h2>Album Orders:</h2>

<table class="table table-striped table-hover table-bordered">
    <tr class="warning">
        <th>
            @Html.DisplayNameFor(model => model.OrderId)
        </th>
          <th>
            @Html.DisplayNameFor(model => model.Order.OrderDate)
        </th>
          <th>
            @Html.DisplayNameFor(model => model.Album.Title)
        </th>
         <th>
            @Html.DisplayNameFor(model => model.Order.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order.Country)
        </th>
          <th>
            @Html.DisplayNameFor(model => model.Order.Total)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
              <td>
                @Html.DisplayFor(modelItem => item.Order.OrderDate)
            </td>
               <td>
                @Html.DisplayFor(modelItem => item.Album.Title)
            </td>
              <td>
                @Html.DisplayFor(modelItem => item.Order.FirstName)
            </td>
              <td>
                @Html.DisplayFor(modelItem => item.Order.LastName)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Order.City)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Order.Country)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Order.Total)
            </td>
          
           <td>
                @Html.ActionLink("Albums & Artist", "Index", "Album", new { id = item.OrderId }, new {@class="btn btn-info"})
            </td>

         @*   <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.OrderId }) |
            @Html.ActionLink("Albums", "Index", "Album", new { id = item.OrderId }, null) |

            @Html.ActionLink("Artist & Albums",
                "IndexArtist", "Album", new { id = item.OrderId }, new { @class = "btn btn-info btn-xs" }) |

            @Html.ActionLink("Delete", "Delete", new { id = item.OrderId })
            </td>*@
        </tr>

    }
</table>
